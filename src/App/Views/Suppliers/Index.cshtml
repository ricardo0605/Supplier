@using App.Extensions;
@model IEnumerable<App.ViewModels.SupplierViewModel>

@{
    ViewData["Title"] = "Suppliers";
}

<h4 style="padding-top:50px;">@ViewData["Title"]</h4>
<hr />
<vc:Summary></vc:Summary>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DocumentNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @this.DocumentFormat(item.SupplierType, item.DocumentNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td class="text-right">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id"><span class="fa fa-search" title="Details"></span></a>
                    <a class="btn btn-warning" disable-by-claim-name="Suppliers" disable-by-claim-value="Edit" asp-action="Edit" asp-route-id="@item.Id"><span class="fa fa-pencil-alt" title="Edit"></span></a>
                    <a class="btn btn-danger" disable-by-claim-name="Suppliers" disable-by-claim-value="Delete" asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash" title="Delete"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
<p supress-by-claim-name="Suppliers" supress-by-claim-value="Create" >
    <a class="btn btn-info float-right" asp-action="Create">Create New</a>
</p>
